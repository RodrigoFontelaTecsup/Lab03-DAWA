<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Detalle de Matrícula</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
  </head>
  <body
    class="d-flex justify-content-center align-items-center"
    style="height: 100vh"
  >
    <div class="container text-center">
      <h1>Detalle de Matrícula</h1>

      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Curso</h5>
          <p class="card-text"><%= curso %></p>
        </div>
      </div>

      <div class="card mt-3">
        <div class="card-body">
          <h5 class="card-title">Módulos Seleccionados</h5>
          <p class="card-text">
            <%= Array.isArray(modulos) ? modulos.join(", ") : modulos %>
          </p>
        </div>
      </div>

      <div class="card mt-3">
        <div class="card-body">
          <h5 class="card-title">Forma de Pago</h5>
          <p class="card-text"><%= formaPago %></p>
        </div>
      </div>

      <div class="card mt-3">
        <div class="card-body">
          <h5 class="card-title">Total a Pagar</h5>
          <p class="card-text">S/ <%= totalPagar %></p>
        </div>
      </div>
    </div>
  </body>
</html>
